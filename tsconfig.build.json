{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./_ts_compile",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "es6",
        "rootDir": "./src",
        "lib": ["dom", "es6", "es2017"],
        "typeRoots": ["types", "node_modules/@types"],
        "baseUrl": "./",
        "paths": {
            "~src/*": ["src/*"],
            "~resources/*": ["resources/*"]
        },
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error",
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"]
}
